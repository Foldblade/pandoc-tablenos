	@if [ ! -d $(dir $@) ]; then mkdir -p $(dir $@); fi
	$(PANDOC-1.15) $< --from markdown+autolink_bare_uris --filter pandoc-tablenos $(FLAGS) -o $@


.PHONY: clean

clean:
	rm -rf out
